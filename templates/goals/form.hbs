<div class="pb-2 flex justify-center mt-8">
    <div class="flex flex-row gap-4 justify-between shadow-md p-6 pb-2 w-full @xl:w-4/12 @sm:mx-2">
        <h1 class="basis-1/4 @sm:basis-1/3">
            <span class="font-semibold">Goals</span>
            {{#if name}}
                <br>
                <span class="text-slate-500">{{name}}</span>
            {{/if}}
        </h1>
        <div class="grow">
            <div id="errors">
                {{#if errors}}
                    <p>{{errors}}</p>
                {{/if}}
            </div>
            <form class="flex flex-col gap-4" {{#if id}}id="goal-{{id}}" method="put" action="/goals/{{id}}"{{else}}method="post" action="/goals"{{/if}}>
                <input type="hidden" name="_token" value="{{csrf}}" />
                <div class="flex flex-col">
                    <label for="name">Name</label>
                    <input id="name"
                           name="name"
                           type="text"
                           required
                           value="{{name}}" />
                </div>
                <div data-controller="currency-input"
                     class="flex flex-col"
                     data-currency-input-precision-value="2">
                    <label for="target">Target</label>
                    <input data-currency-input-target="input"
                           name="target"
                           pattern="\d*"
                           required
                           type="number"
                           data-action="currency-input#change"
                           value="{{target}}" />
                    <div data-currency-input-target="output"></div>
                </div>
                <div class="flex flex-col">
                    <label for="target_date">Target date</label>
                    <input id="target_date"
                           name="target_date"
                           required
                           type="date"
                           value="{{target_date}}" />
                </div>
                <div class="flex flex-col">
                    <label for="recurrence">Recurrence</label>
                    <select id="recurrence" name="recurrence" required>
                        <option value="never" {{#if (eq recurrence "never")}}selected{{/if}}>Never</option>
                        <option value="daily" {{#if (eq recurrence "daily")}}selected{{/if}}>Daily</option>
                        <option value="weekly" {{#if (eq recurrence "weekly")}}selected{{/if}}>Weekly</option>
                        <option value="monthly" {{#if (eq recurrence "monthly")}}selected{{/if}}>Monthly</option>
                        <option value="quarterly" {{#if (eq recurrence "quarterly")}}selected{{/if}}>Quarterly</option>
                        <option value="yearly" {{#if (eq recurrence "yearly")}}selected{{/if}}>Yearly</option>
                    </select>
                </div>
                <div class="flex justify-end items-center gap-4">
                    <a href="/goals">Cancel</a>
                    <input class="disabled:opacity-75 cursor-pointer bg-blue-500 disabled:hover:bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                           type="submit"
                           value="Save" />
                </div>
            </form>
        </div>
    </div>
</div>
