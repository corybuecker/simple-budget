<div class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4">
            <h1 class="text-xl font-bold text-white">
                Envelopes
                {{#if name}}
                    <div
                        class="text-blue-100 text-sm font-normal mt-1"
                    >{{name}}</div>
                {{/if}}
            </h1>
        </div>

        <!-- Form Content -->
        <div class="p-6">
            <div id="errors" class="mb-4">
                {{#if errors}}
                    <div
                        class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg"
                    >
                        {{errors}}
                    </div>
                {{/if}}
            </div>

            <!-- Name Field -->
            <div class="mb-8">
                <label
                    for="name"
                    class="block text-sm font-medium text-gray-700 mb-2"
                >
                    Envelope Name
                </label>
                <input
                    id="name"
                    name="name"
                    required
                    type="text"
                    value="{{name}}"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200 placeholder-gray-400"
                    placeholder="Enter envelope name"
                />
            </div>

            <!-- Amount Field -->
            <div
                data-controller="currency-input"
                class="mb-8"
                data-currency-input-precision-value="2"
            >
                <label
                    for="amount"
                    class="block text-sm font-medium text-gray-700 mb-2"
                >
                    Amount
                </label>
                <div class="relative">
                    <span
                        class="absolute left-4 top-3 text-gray-500 font-medium"
                    >$</span>
                    <input
                        data-currency-input-target="input"
                        name="amount"
                        pattern="\d*"
                        required
                        type="number"
                        data-action="currency-input#change"
                        value="{{amount}}"
                        class="w-full pl-8 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200 placeholder-gray-400"
                        placeholder="0.00"
                    />
                </div>
                <div
                    data-currency-input-target="output"
                    class="mt-1 text-sm text-gray-600"
                ></div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-row justify-end gap-3 pt-4">
                <a
                    href="/envelopes"
                    class="inline-block text-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors"
                >
                    Cancel
                </a>
                <input
                    type="submit"
                    value="Save Envelope"
                    class="px-6 py-2 text-white font-medium rounded-lg cursor-pointer border-none outline-none transition-colors duration-200 hover:bg-blue-700"
                    style="background-color: #2563eb;"
                />
            </div>
        </div>
    </div>
</div>